func main() {
	// Basic operations
	var r1 = (2 + 3 == 5);
	var r2 = (10 - 7 == 3);
	var r3 = (6 * 8 == 48);
	var r4 = (20 / 4 == 5);
	var r5 = (17 % 5 == 2);

	// Negative number operations
	var r6 = (-5 + 3 == -2);
